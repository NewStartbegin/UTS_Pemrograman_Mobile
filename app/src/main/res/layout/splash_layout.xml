<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/splash_back"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Judul Aplikasi -->
        <TextView
            android:id="@+id/judul_projek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1A1A1A"
            android:textSize="42sp"
            android:fontFamily="@font/libre"
            android:textStyle="bold"
            android:layout_marginBottom="40dp" />

        <!-- Foto Profile dengan Card Rounded -->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="90dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#AA182730"
            android:layout_marginBottom="40dp">

            <ImageView
                android:id="@+id/gambar_murid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Profile Photo"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#AA182730"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Nama -->
                <TextView
                    android:id="@+id/name_murid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/libre"
                    android:textColor="#F2F2F2"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- NRP -->
                <TextView
                    android:id="@+id/nrp_murid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/bitcoin"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />

                <!-- Kelas -->
                <TextView
                    android:id="@+id/kelas_murid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre"
                    android:textColor="#F2F2F2"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateTint="#BFC8D0"
            style="?android:attr/progressBarStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="#BFC8D0"
            android:textSize="14sp"
            android:fontFamily="@font/libre"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</RelativeLayout>