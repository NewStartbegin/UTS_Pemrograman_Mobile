<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorFragment"
    android:background="@raw/cal_back">

    <!-- Navbar -->
    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15sp"
        android:padding="17dp">

        <TextView
            android:id="@+id/Judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/libre"
            android:text="Kalkulator"
            android:textColor="#FFF4EA"
            android:textSize="35sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Box calculator -->
    <androidx.cardview.widget.CardView
        android:id="@+id/calculator_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navbar"
        android:layout_above="@id/bottom_navigation"
        android:layout_margin="5dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#AA182730"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <!-- Box untuk Input dan Result -->
            <LinearLayout
                android:id="@+id/display_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/button_layout"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <!-- Box Input Number -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#AA182730"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <EditText
                        android:id="@+id/inputnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center_vertical|end"
                        android:inputType="none"
                        android:minHeight="90dp"
                        android:padding="20dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textIsSelectable="false"
                        android:textSize="45sp"
                        android:verticalScrollbarPosition="right" />

                </androidx.cardview.widget.CardView>

                <!-- Box Result -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#AA182730"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <EditText
                        android:id="@+id/result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center_vertical|end"
                        android:minHeight="70dp"
                        android:padding="20dp"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="#4F575E"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Button Layout -->
            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:background="#0F1216"
                android:orientation="horizontal"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.widget.Button
                        android:id="@+id/clear"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="c"
                        android:textColor="#2C414A"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/buttondot"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="."
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.widget.Button
                        android:id="@+id/buttonbackspace"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:drawableTop="@drawable/backspace"
                        android:drawableTint="#2C414A"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:paddingTop="25dp"
                        android:textColor="#2C414A"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button8"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button0"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.widget.Button
                        android:id="@+id/buttonx"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="√x"
                        android:textColor="#2C414A"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/buttona"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#182730"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="X²"
                        android:textColor="#2C414A"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.widget.Button
                        android:id="@+id/buttondivide"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#2C414A"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="÷"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/buttonmultiple"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#2C414A"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/buttonsubtract"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#2C414A"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/buttonplus"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#2C414A"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/buttonequal"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/ripple"
                        android:backgroundTint="#697881"
                        android:fontFamily="@font/bitcoin"
                        android:gravity="center"
                        android:text="="
                        android:textColor="#0F1216"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#AA182730"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <!-- Contact -->
            <LinearLayout
                android:id="@+id/nav_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageButton
                    android:id="@+id/contact"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/page_contact"
                    android:scaleType="fitCenter"
                    android:contentDescription="Contact"
                    android:clickable="false"
                    app:tint="#5C6B74" />

                <TextView
                    android:id="@+id/contact_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Contact"
                    android:fontFamily="@font/libre"
                    android:textColor="#5C6B74"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- News -->
            <LinearLayout
                android:id="@+id/nav_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageButton
                    android:id="@+id/news"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/berita"
                    android:scaleType="fitCenter"
                    android:contentDescription="News"
                    android:clickable="false"
                    app:tint="#5C6B74" />

                <TextView
                    android:id="@+id/news_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="News"
                    android:fontFamily="@font/libre"
                    android:textColor="#5C6B74"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- Biodata -->
            <LinearLayout
                android:id="@+id/nav_biodata"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageButton
                    android:id="@+id/biodata"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Biodata"
                    android:scaleType="fitCenter"
                    android:src="@drawable/person"
                    android:clickable="false"
                    app:tint="#5C6B74" />

                <TextView
                    android:id="@+id/biodata_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/libre"
                    android:text="Biodata"
                    android:textColor="#5C6B74"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- Cuaca -->
            <LinearLayout
                android:id="@+id/nav_cuaca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageButton
                    android:id="@+id/cuaca"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/awan"
                    android:scaleType="fitCenter"
                    android:contentDescription="Cuaca"
                    android:clickable="false"
                    app:tint="#697881" />

                <TextView
                    android:id="@+id/Cuaca_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Cuaca"
                    android:fontFamily="@font/libre"
                    android:textColor="#5C6B74"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- Calculator -->
            <LinearLayout
                android:id="@+id/nav_calculator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/calculator"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="Calculator"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kalkulator"
                    app:tint="#4FA6C0" />

                <TextView
                    android:id="@+id/calculator_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/libre"
                    android:text="Kalkulator"
                    android:textColor="#4FA6C0"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>